<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:extended="clr-namespace:FingerPaint.Extended"
             x:Class="FingerPaint.SigningPage">
    <ContentPage.Content>
        <Grid RowDefinitions="*, 0.1*" HorizontalOptions="Fill" VerticalOptions="Fill">
            <extended:PdfView x:Name="Viewer" Grid.Row="0" HorizontalOptions="Fill" VerticalOptions="Fill"> </extended:PdfView>
            <Grid Grid.Row="1" BackgroundColor="SaddleBrown" HorizontalOptions="Fill" VerticalOptions="Fill">
                <Button Text="Sign" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Default" Clicked="OnButtonSignClicked"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
